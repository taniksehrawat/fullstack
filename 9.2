name: CI/CD Pipeline for React App

# Trigger workflow on every push to the main branch
on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout repository code
      - name: Checkout code
        uses: actions/checkout@v4

      # Step 2: Set up Node.js environment
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'   # You can change this if needed

      # Step 3: Install dependencies
      - name: Install dependencies
        run: npm ci

      # Step 4: Run tests
      - name: Run tests
        run: npm test --if-present

      # Step 5: Build the project
      - name: Build project
        run: npm run build

      # Step 6 (Optional): Upload build artifacts for inspection (optional for debugging)
      - name: Upload production build
        uses: actions/upload-artifact@v4
        with:
          name: production-build
          path: build/

      # Step 7 (Optional): Deploy to GitHub Pages
      # Remove this block if you donâ€™t want automatic deployment
      - name: Deploy to GitHub Pages
        if: github.ref == 'refs/heads/main'
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./build
